@model MyWebApplication.Models.ViewModel.ProductVM;
@{
    ViewData["Title"] = "Index";
}

<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-primary">List of Products</h2>
        </div>
        <div class="col-6 text-end">

            <a class="btn btn-primary" asp-action="CreateUpdate" asp-controller="Product"><i class="bi bi-plus-circle"></i> &nbsp;Create New Product</a>
        </div>
    </div>
</div>
<table id="mytable" class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr class="text-center">
            <th>
                ID
            </th>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
               Price
            </th>
            <th>
                Image
            </th>
            <th>
                Category
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
  
</table>
@section scripts{
  <script src="~/js/product.js" type="text/javascript"></script>
}


